@model ModelCliente

@{
    ViewData["Title"] = "Nuevo Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error !</strong> @TempData["ErrorMessage"]
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
}

<div class="card" style="margin: 7rem 0 0 30rem !important;">
    <h5 class="card-header">Guardar cliente</h5>
      <div class="card-body">
        <form asp-action="GuardarForm" asp.controller="CRUD" method="post">
                  <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input asp-for="nombre" type="text" class="form-control">
                        <div>
                        <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                          <label class="form-label">Dirección</label>
                         <input asp-for="direccion" type="text" class="form-control">
                         <div>
                          <span asp-validation-for="direccion" class="text-danger"></span>
                         </div>

                          <label class="form-label">Población</label>
                         <input asp-for="poblacion" type="text" class="form-control">
                         <div>
                           <span asp-validation-for="poblacion" class="text-danger"></span>
                         </div>

                          <label class="form-label">Teléfono</label>
                         <input asp-for="telefono" type="text" class="form-control">
                         <div>
                         <span asp-validation-for="telefono" class="text-danger"></span>
                         </div>

                     </div>

              <button type="submit" class="btn btn-primary">Guardar</button>
              <a asp-action="Listar" asp.controller="CRUD" class="btn btn-warning">Volver al listado</a>
        </form>
     </div>
</div>

