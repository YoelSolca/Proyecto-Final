@model ModelPedido

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GuardarForm</title>
</head>
<body>

    <style>
    h6 {
    color: #fff;
    font-weight: 300;
    font-size: 14px;
    text-align: right;
    margin-bottom: 0!important;
    margin-top: 0!important;
}
</style>

        <form asp-action="GuardarForm" asp.controller="Pedido" method="post">

 <div class="container" style=" margin-top: 7rem !important;
    margin-left: 5rem !important;">
        <div class="col-sm-4"></div>
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="background:#bd2d2d; color: #fff">
            <h6>Agregar pedido</h6>

        </div>
        <div class="modal-body">
                    <label class="form-label">Nombre</label>

                         <select class="form-select" aria-label="Default select example" style="margin-top: 1rem;" asp-for="cArticulo"> 
                                        @foreach (var item in ViewBag.articulos)
                                        {
                                          <option  value="@item.id">@item.nombreArticulo</option>
                                        }
                          </select>
                          <div>
                        <span asp-validation-for="cArticulo" class="text-danger"></span>
                          </div>

                        
                          <label class="form-label">Forma de pago</label>
                         <input asp-for="formadePago" type="text" class="form-control">
                         <div>
                           <span asp-validation-for="formadePago" class="text-danger"></span>
                         </div>
</div>
        <div class="modal-footer">
           <button type="submit" class="btn btn-primary" >Agregar</button>

           <a asp-action="Listar" asp.controller="CRUD" class="btn btn-warning">Cancelar</a>   
       </div>

      </div>
    </div>
        </div>
        </form>


</body>
</html>


                         <script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script type="text/javascript">
    $(function () {
        $("body").on('change', '#ddlCountries', function () {
            $('#hfCountry').val($(this).find('option:selected').text());
        });
        $("body").on('click', '#btnCreate', function () {
            if (!$('form').valid()) {
                $("#MyPopup").modal("show");
                return false;
            }
        });
    });

</script>